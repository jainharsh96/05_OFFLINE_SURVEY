<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00B0FF</item>
        <item name="colorPrimaryDark">#0277BD</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customButtonStyle">
        <item name="android:layout_width">@dimen/width_0_dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:paddingTop">@dimen/padding_12_dp</item>
        <item name="android:paddingBottom">@dimen/padding_12_dp</item>
    </style>
</resources>